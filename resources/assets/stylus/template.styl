@font-face
	font-family: 'Roboto'
	src url("../fonts/Roboto-Regular.ttf")
	
*
	margin 0
	padding 0
	box-sizing border-box
	font-size 4.27vw
	font-family "Roboto", 'sans-serif'
	
header
	width 100%
	height 15vw
	background-color #FF6F00
	padding 0 5vw 0 5vw
	position absolute
	top 0
	box-shadow 2px 2px 5px #888888
	display grid
	grid-template-columns 60% 40%
	align-items center
	z-index 1
	.logo
		width 60%
	.user
		color #fff
		text-decoration none
		img
			height 6.4vw
	.arrow
		float left
		margin-top 4%
		margin-right 5%
	+desktop()
		height 5vw
		padding 0 5vw
		justify-items right
		h1
			font-size 1rem
			margin-right 25px
		a
			font-size 1.76vw
			img
				height 1.76vw
		a > img
			display none
		

.principal
	width 100vw
	height 100vh	
	text-align center
	z-index 0
	background-image url("../img/fundoMain.jpeg")
	+desktop()
		background url("../img/cachorro_e_gato.jpg") no-repeat
		// background-position-x 0
	background-attachment fixed
	background-size auto 100%
	background-position-x: -150px
	
	.container
		width 100vw
		height 100vh
		background-color rgba(5,5,5,0.7)
		padding-top 50vw
		text-align center
		img
			width 90%
		h3
			color #fff
			margin-bottom 5vw
			font-weight bold
		+desktop()
			padding-top 15vw
			background-color rgba(5,5,5,0.4)
			img
				width 50%
			h3
				font-size 0.5rem
				margin-bottom 20px
		
				
		a.adotarBtn
			display block
			width 80%
			height 60px
			margin-left 10%
			padding 16px 20px
			margin-top 20px
			color #FF6F00
			background: #fff
			text-decoration none
			font-size 1.5rem
			border none
			border-radius 50px
			box-shadow 1px 1px 2px gray
			font-weight bold
			+desktop()
				width 30%
				font-size 0.5rem
				padding 10px 15px
				position absolute
				left 25%

		a.cadastrarBtn
			display block
			width 80%
			margin-left 10%
			padding 10px 20px
			margin-top 20px
			color #FF6F00
			background: #fff
			text-decoration none
			font-size 1.5rem
			border none
			border-radius 50px
			box-shadow 1px 1px 2px gray
			font-weight bold	
			+desktop()
				width 30%
				font-size 0.5rem
				padding 10px 15px
				position absolute
				top 50%
				left 25%