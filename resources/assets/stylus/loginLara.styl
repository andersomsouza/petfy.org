input:focus
  outline none
.bgLoginFormLogin
  background-image url(../img/fundoMain.jpeg)
  background-attachment fixed
  background-size cover
  background-repeat none
  background-position 25% 30%
  height 100vh
  padding 0
  color: #fff
  .shadow
    h1.login
      margin-bottom 50px
    background-color rgba(0,0,0,0.6)
    padding-top 8vh
    height 100vh
    .formLogin
      text-align center
      label
        display inline-block
        text-align left
        padding-left 25%
        font-size 18px
        width 100%
      .help-block
        display inline-block
        text-align center;
        padding 10px
        color rgba(190,0,0,0.9)
      input
        border none;
        border-bottom solid #ff6f00 1px
        line-height 40px
        margin 5px
        background rgba(0,0,0,0)
        color rgba(255,255,255,1)
        box-sizing border-box
        padding 2px
        &:focus
          border none
          outline none !important
          outline-offset none !important
          border-bottom solid #ff6f00 2px
          transition 300ms
          box-shadow none
      button.button
        background-color #ff6f00
        color: #fff3e0
        padding 11px 55px
        border none
        border-radius 30px
        margin 40px auto
        text-align center
    h1
      a
        font-size 30px
        color: #FF6F00
        text-align center
        text-decoration none

