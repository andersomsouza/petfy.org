.header-filtro
	grid-template-columns 43% 57%
	a
		img
			float left
			height 6.4vw		
	h2
		color #fff
		
.container-filtro
	padding 20vw 10vw
	width 100%
	height 100%
	background-color #bcbcbc
	display grid
	justify-items center
	align-items center
	grid-template-columns 1fr 1fr
	color #FF6F00
	h1
		display none
	h2
		grid-column-end span 2
		color #000
		margin 5% 0
	form
		grid-column-end span 2
		text-align center
		.text
			margin 3% 0
		input
			cursor pointer
	a
		text-decoration none
		grid-column-end span 2
		p
			padding 5vw 3vw
			color #FF6F00
			background-color #fff
			border-radius 5vw 
			border none
			box-shadow 1px 1px 1px #888888
			margin-top 5%
	+desktop()
		padding 5vw 10vw
		grid-template-columns 1fr 1fr 1fr 1fr
		grid-row-gap 2vw
		a
			grid-column-end span 4
			p
				padding 2vw 1vw
				border-radius 2vw
				font-size 0.5rem
		h2
			font-size 0.5rem
		h1
			display block
			grid-column-end span 4
			margin-top 2vw
			font-size 0.75rem
		form
			p
				font-size 0.5rem
				span
					font-size 0.5rem
		
				
	.item
		background-color #fff
		width 30vw
		height 30vw
		border-radius 50%
		position relative
		box-shadow 2px 2px 2px #888888
		margin-top 5%
		cursor pointer
		img
			position absolute
			width 90%
			top 50%
			left 50%
			transform translate(-50%,-65%)
		h3
			position absolute
			bottom 0
			left 50%
			transform translate(-50%,-40%)
		+desktop()
			width 10vw
			height 10vw
			h3
				font-size 0.5rem	
	.porte-grid
		grid-column-end span 2
		display grid
		grid-template-columns 1fr 1fr 1fr
		justify-items center
		align-items center
		div
			width 20vw
			height 20vw
			margin 0 5%
			cursor pointer
			img
				position absolute
				top 50%
				left 50%
				transform translate(-50%,-50%)
			#pequena
				width 40%
			#media
				width 50%
			#grande
				width 60%
		h2
			grid-column-end span 3
		+desktop()
			grid-column-end span 4
			div
				width 10vw
				height 10vw
	.selected
		background-color #FFE082